extend ../common/layout
block links
	link(href="/css/teacher/info.css",rel="stylesheet")
block content
	.content
		.container
			.info-header
				img.info-icon(src="http://placehold.it/150x150")
				span.info-name #{user.name}
				span.info-brief
					span.brief-icon.glyphicon.glyphicon-pencil
					span.brief-content #{user.brief}(头像和简介暂未同步)
			.info-content
				.info-item
					a.btn.btn-info 个人信息
					.info-item-content
						ul.info
							li.info-line
								span 姓名
								span #{user.name}
							li.info-line
								span 工号
								span #{user._id}
							li.info-line
								span 学院
								span #{user.college}
							li.info-line
								span.btn.btn-danger(data-toggle="modal",data-target="#myModal") 密码修改
				.info-item
					a.btn.btn-info(href="/teacher/paper-manage") 最新试卷(暂未同步)
					.info-item-content
						table.scores.table.table-striped.table-hover
							tr
								th 试卷名
								th 更新时间
							tr
								td 大学计算机基础1
								td 2016/5/5
							tr
								td 大学计算机基础2
								td 2016/5/6
				.info-item
					a.btn.btn-info(href="/teacher/exam-manage") 最新考试(暂未同步)
					.info-item-content
						table.exams.table.table-striped.table-hover
							tr
								th 考试名
								th 考试时间
							tr
								td 大学计算机基础1
								td 2016/5/5
							tr
								td 大学计算机基础2
								td 2016/5/6
	include ../common/infoModal
block scripts
	script(src="/js/teacher/info.js")